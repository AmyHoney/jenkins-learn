            steps {
                echo "Hello, ${firstName}, nice to meet you."
                // echo "Hello, ${NAMESPACE}, nice to meet you."
                // sh "ns=${NAMESPACE}; number=${NUMBER};" + './readPara02.sh -a ${ns} -b ${number}'
            }
        }
        stage('DeployKubeflow') {
            steps {
                sh 'ls -la'
                echo "DeployKubeflow"
                echo "Hello, ${firstName}, nice to meet you."
                // retry(3) {
