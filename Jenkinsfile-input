pipeline {
    agent any
    stages {
        stage('Example') {
            input {
                message "Should we continue?"
                ok "Yes, we should."
                submitter "alice,bob"
                parameters {
                    string(name: 'NAMESPACE', defaultValue: 'zyajing', description: 'In which namespace do you want to create a cluster?')
                }
            }
            steps {
                echo "Hello, ${NAMESPACE}, nice to meet you."
                sh "i=${NAMESPACE}; " + 'echo "from shell i=$i"'
            }
        }
    }
}
